generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // Mo≈ºesz zmieniƒá na `mysql`, `sqlite`, `mongodb`
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id @default(uuid())
  email         String  @unique
  firebaseId    String  @unique
  password      String
  name          String?
  uuid          String?
  createdAt     DateTime @default(now())
}

model PlayerCode {
  uuid  String  @id @default(uuid())
  name  String?
  code  String  @unique
  used  Boolean @default(false)  // Nowe pole, domy≈õlnie `false`
}

model PlayerMoneyRanking {
  uuid   String @id @default(uuid())
  name   String
  money  Float
}

model PlayerTimeRanking {
  uuid        String @id @default(uuid())
  name        String
  time_played BigInt  // üî• Przechowujemy ticki jako BigInt!
}

model IslandLevelRanking {
  uuid        String @id @default(uuid())
  position    Int
  player_name String
  level       Int
}


model Orders {
  id           String  @id @default(uuid()) // Unikalne ID zam√≥wienia
  orderId      String  @unique // ID zam√≥wienia z HotPay
  name         String  // Nazwa gracza
  amount       Float   // Kwota p≈Çatno≈õci
  service_name String  // Nazwa us≈Çugi
  status       String  // Status p≈Çatno≈õci: PENDING, SUCCESS, FAILED
  createdAt    DateTime @default(now()) // Data utworzenia zam√≥wienia
}

model Mode1Stats {
  uuid         String   @id @db.VarChar(36)
  name         String   @db.VarChar(16)
  kills        Int      @default(0)
